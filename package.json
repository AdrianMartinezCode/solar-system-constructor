{
  "name": "solar-system-constructor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build:domain && npm run build:web && npm run build:api",
    "build:domain": "npm run build --workspace=packages/domain",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "typecheck": "npm run typecheck:domain && npm run typecheck:web && npm run typecheck:api",
    "typecheck:domain": "npm run typecheck --workspace=packages/domain",
    "typecheck:web": "npm run typecheck --workspace=apps/web",
    "typecheck:api": "npm run typecheck --workspace=apps/api",
    "preview:web": "npm run preview --workspace=apps/web"
  }
}
